@model InternalProject.Models.ProductVM

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Details</h2>

<div class="row">
    <div  class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
        <img class="img-thumbnail img-responsive"  src="@Html.DisplayFor(model => model.imgUrl)" />
    </div>

    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.name)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.name)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.manufacturer)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.manufacturer)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.vendor)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.vendor)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.summary)
            </dt>

            <dd>
                @Html.Raw(Html.Encode(Html.DisplayFor(model => model.summary)).Replace("\n", "<br />"))
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.price)
            </dt>

            <dd>
                <s>@Html.DisplayFor(model => model.price)</s>
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.discountPrice)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.discountPrice)
            </dd>
        </dl>
        <hr />

        <div class="row" style="margin:auto">
            @Html.ActionLink("Back to List", "Index", new { }, new { @class = "btn btn-primary col-lg-6 col-md-6 col-sm-6 col-xs-12" })
        </div>


    </div>
</div>